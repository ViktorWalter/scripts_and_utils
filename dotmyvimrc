python << EOS
try:
     import rospkg
     import vim
except ImportError:
     vim.command("let is_ros='N/A'")
if rospkg.get_package_name(vim.eval("expand('%:p')")):
    vim.command("let is_ros='true'")
else:
    vim.command("let is_ros='false'")
EOS
if is_ros == "true"
  set efm=%f:%l:%c:\ error:%m
endif

endif


