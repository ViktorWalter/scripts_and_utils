bindsym $mod2+k exec --no-startup-id xdotool mousemove_relative --sync -- 0 -10
bindsym $mod2++shift+h exec --no-startup-id xdotool mousemove_relative --sync -- -100 0
bindsym $mod2+shift++l exec --no-startup-id xdotool mousemove_relative --sync -- 100 0
bindsym $mod2+shift++j exec --no-startup-id xdotool mousemove_relative --sync -- 0 100
bindsym $mod2+shift++k exec --no-startup-id xdotool mousemove_relative --sync -- 0 -100
