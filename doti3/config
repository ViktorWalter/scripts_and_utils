 # Start i3bar to display a workspace bar (plus the system information i3status
 # finds out, if available)
bar {

  status_command i3blocks -c ~/.i3/i3blocks.conf
    i3bar_command i3bar  
    font pango: lode, FontAwesome 10
    height 25

    # font pango:DejaVu Sans Mono, Awesome 8

    colors {

      statusline $text_color
        background $transparent
        separator  $inactive_text_color

#                  border             background           text
        focused_workspace  $focused_ws_bg     $focused_ws_bg       $active_text_color
        active_workspace   $transparent       $active_background   $active_text_color
        inactive_workspace $transparent       $inactive_background $inactive_text_color
        binding_mode       $transparent       $transparent         $active_text_color
        urgent_workspace   $transparent       $transparent         #ff0000
    }

# i3bar position
  position bottom
  tray_output primary
  # status_command i3status ~/.i3/my_i3status.sh

}

